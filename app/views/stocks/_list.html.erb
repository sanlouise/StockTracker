<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Price</th>
      <th>Change</th>
      <% if @user.id == current_user.id %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.ticker %></td>
        <td><%= user_stock.price %></td>
        <% if user_stock.change_realtime.to_i > 0 %>
          <td><i class="fa fa-arrow-up positive-color"></i> <%= user_stock.change_realtime %></td>
        <% elsif user_stock.change_realtime.to_i < 0 %>
          <td><i class="fa fa-arrow-down negative-color"></i> <%= user_stock.change_realtime %></td>
        <% else %>
          <td>Unavailable</td>
        <% end %>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to 'Delete', user_stock_path(user_stock), method: :delete, 
                                            data: { confirm: "Are you sure?" }, 
                                            class: "btn btn-danger btn-xs" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

